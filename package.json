      "yarn lint:ts:fix",
      "git add"
    ],
    "**/*.scss": [
      "yarn lint:scss:fix",
      "git add"
    ]
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.app",
